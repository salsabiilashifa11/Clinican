#: import rgba kivy.utils.rgba

<SigninApotekerWindow>:
    id: signinapoteker_win
    orientation: 'vertical'
    canvas:
        Rectangle:
            size: self.size
            pos: self.pos
            source: '../img/samplebg4.jpg'

    Label:
        size_hint_y: 0.2

    BoxLayout:
        orientation: 'vertical'
        padding: 1.1*self.size[0]/3, 0
        canvas:
            Color:
                rgba: (1,1,1,1)
            RoundedRectangle:
                size: (self.size[0]/3, self.size[1])
                pos: (self.pos[0]+self.size[0]/3, self.pos[1])
                radius: [15, ]

        Label:
            size_hint_y: None
            height: 130
            text: 'Sign In'
            bold: True
            text_size: self.size
            halign: 'center'
            valign: 'bottom'
            padding_y: 20
            font_size: 50
            color: rgba('#6f6f6f')

        Label:
            size_hint_y: None
            height: 50
            text: 'APOTEKER'
            bold: False
            text_size: self.size
            halign: 'center'
            valign: 'top'
            padding_x: 90
            font_size: 22
            color: rgba('#6f6f6f')

        BoxLayout:
            orientation: 'vertical'
            spacing: 20
            size_hint_y: None
            height: 110

            RoundedTextInput:
                id: username_field
                hint_text: 'Username'
                multiline: False
                font_size: 16
                padding: 0, 10
                on_text_validate: pass_field.focus = True

            RoundedTextInput:
                id: pass_field
                hint_text: 'Password'
                multiline: False
                font_size: 16
                password: True
                padding: 0, 10
                on_text_validate: root.validate_account()

        Label:
            size_hint_y: None
            height: 20

        RoundedButton:
            text: 'Sign In'
            font_size: 16
            size_hint_y: None
            height: 45
            on_release: root.validate_account()

        Label:
            id: message
            text: ''
            font_size: 16
            markup: True

        Label:


    BoxLayout:
        size_hint_y: 0.2
        canvas:
            Color:
                rgba: (1,1,1,0)
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            size_hint_x: 0.84

        AltUserButton:
            size_hint_x:  0.07
            canvas:
                Rectangle:
                    size: (35,35)
                    pos: (self.pos[0] + self.size[0]/4 + 5, self.pos[1] + self.size[1]/3 + 3)
                    source: '../img/redheart.png'
            on_release: root.to_signindokter()

        AltUserButton:
            size_hint_x: 0.07
            canvas:
                Rectangle:
                    size: (35,35)
                    pos: (self.pos[0] + self.size[0]/4 + 5, self.pos[1] + self.size[1]/3 + 3)
                    source: '../img/blueheart.png'
            on_release: root.to_signinuser()


        Label:
            size_hint_x: 0.02
