<paySuccessWindow>:
    orientation: 'vertical'
    canvas:
        Color:
            rgba: rgba('#FFFFFF')
        Rectangle:
            size: self.size
            pos: self.pos
            source: '../img/samplebg.jpg'

    BoxLayout:
        size_hint_y: 0.2

    BoxLayout:
        size_hint_y: 0.6
        BoxLayout:
            size_hint_x: 0.2

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.6
            canvas:
                Color:
                    rgba: rgba('#FFFFFF')
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [15, 15, 15, 15]
            BoxLayout:
                size_hint_y: 0.7
                size: (300,300)
                canvas:
                    Rectangle:
                        size: (300,300)
                        pos: (self.pos[0]+230, self.pos[1]-20)
                        source: '../img/check.png'
            Label:
                size_hint_y: 0.2
                text: "Payment Success!"
                color: rgba('#26AE4C')
                bold: True
                font_size: 45
                size: self.size
                valign: 'bottom'
                halign: 'center'
                padding_y: 60

            Label:
                size_hint_y: 0.1


        BoxLayout:
            size_hint_x: 0.2


    BoxLayout:
        size_hint_y: 0.2
        Label:
            size_hint_x: 0.9
        Button:
            size_hint_x: 0.1
            #text: "Home"
            #font_size: 18
            background_color: (0,0,0,0)
            canvas:
                Color:
                    rgba: rgba('#FFFFFF')
                Rectangle:
                    size: (80, 74)
                    pos: (self.pos[0]+10, self.pos[1]+30)
                    source: '../img/home.png'
            on_release: root.to_homeuser()
