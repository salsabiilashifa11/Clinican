<BoxPay@BoxLayout>:
    canvas:
        Color:
            rgba: rgba('#C4C4C4')
        RoundedRectangle:
            size: self.size
            pos: self.pos

<LabelPay@Label>:
    text: ''
    color: rgba('#4D4B4B')
    font_size: 14
    bold: True

<RoundedButton2@Button>:
    background_color: (0,0,0,0)
    canvas.before:
        Color:
            rgba: rgba('#f0e267') if self.state=='normal' else rgba('#53CBFF')
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [17,17,17,17]

